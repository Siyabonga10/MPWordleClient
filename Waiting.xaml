<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MPWordleClient"
             x:Class="MPWordleClient.Waiting">

    <Grid RowDefinitions="*, Auto" ColumnDefinitions="*">
        <ScrollView >
            <VerticalStackLayout x:Name="PlayersList">
                <Label x:Name="WaitingLb"
				   Text="{Binding Source={x:Static local:Game.GameIDText}}"
                   VerticalOptions="Start"
                   Padding="30"
                   Style="{StaticResource BaseLabel}"
                   />
                <Label
                   Text="Players in room"
                   VerticalOptions="Start"
                    Style="{StaticResource BaseLabel}"
                   />
            </VerticalStackLayout>
        </ScrollView>
        <Button Text="Start Game"
                HorizontalOptions="Fill"
                Clicked="OnStartGame"
                VerticalOptions="End"
                />
    </Grid>

</ContentPage>
