<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MPWordleClient"
             x:Class="MPWordleClient.Waiting">

    <Grid RowDefinitions="*, Auto" ColumnDefinitions="*">
        <ScrollView >
            <VerticalStackLayout x:Name="PlayersList">
                <Label x:Name="WaitingLb"
				   Text="{Binding Source={x:Static local:Game.GameID}}"
                   VerticalOptions="Start"
                   FontSize="30"
                   FontAttributes="Bold"
                   Margin="20" 
				   TextColor="Green"/>
                <Label
                   Text="Players in room"
                   VerticalOptions="Start"
                   FontSize="30"
                   FontAttributes="Bold"
                   Margin="20" 
                   TextColor="Green"/>
            </VerticalStackLayout>
        </ScrollView>
        <Button Text="Start Game"
                HorizontalOptions="Fill"
                FontAttributes="Bold"
                FontSize="25"
                TextColor="White"
                Clicked="OnStartGame"
                BackgroundColor="{StaticResource PaleGreen}"
                VerticalOptions="End"
                HeightRequest="50"
                Margin="20"/>
    </Grid>

</ContentPage>
