<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MPWordleClient.Waiting">

    <Grid RowDefinitions="*, Auto" ColumnDefinitions="*">
        <ScrollView >
			<Label x:Name="WaitingLb"
				   Text="Game ID: Loading"
                   VerticalOptions="Start"
                   FontSize="30"
                   FontAttributes="Bold"
                   Margin="20" 
				   TextColor="White"/>
							
		</ScrollView>
        <Button Text="Start Game"
                HorizontalOptions="Fill"
                FontAttributes="Bold"
                FontSize="25"
                TextColor="White"
                Clicked="OnStartGame"
                BackgroundColor="{StaticResource PaleGreen}"
                VerticalOptions="End"
                HeightRequest="50"
                Margin="20"/>
    </Grid>

</ContentPage>
