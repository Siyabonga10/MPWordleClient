<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MPWordleClient.GameCreation">

    <FlexLayout
            Direction="Column" 
            JustifyContent="Center"
            AlignItems="Center">
        <Button
            x:Name="CreateGameBtn"
            FontSize="25"
            Text="Create Game"
            BackgroundColor="{StaticResource PaleGreen}"
            Clicked="OnCreateGame"
            Margin="20"
            FontAttributes="Bold"
            TextColor="White"
            />
        <Button
            x:Name="JoinGameBtn"
            FontSize="25"
            Text="Join Game"
            BackgroundColor="{StaticResource PaleGreen}"
            Clicked="OnJoinGame"
            FontAttributes="Bold"
            TextColor="White"
            />

    </FlexLayout>
</ContentPage>